<% if current_user %>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h4 style="text-align:center;">Welcome, <%= current_user.name %></h4>
			<img class="github-profile-image img-responsive img-circle" 
				src="<%= current_user.github_profile.image %>">
		</div>
		<div class="col-md-6" style="margin-top:10px">
			<table class="table table-striped table-hover">
				  <caption>Basic user profile</caption>
				 <tr>
				    <td>From: <%= current_user.github_profile.location %></td>
				</tr>
				<tr>
				    <td>Public repos: <%= current_user.github_profile.public_repo%></td> 
				</tr>
				<tr>
				    <td>Public Gists: <%= current_user.github_profile.public_gists %></td>
				</tr>
				<tr>
				    <td>Followers: <%= current_user.github_profile.followers %></td>
				</tr>
				<tr>
				    <td>Following: <%= current_user.github_profile.following %></td> 
				</tr>
			</table>
		</div>
	</div>
</div>

<% else %>

<div class="container">
	<div class="jumbotron">	
		<div class="container">
			<h1 id="welcome">Welcome!</h1>
			<p id="intro">
				This is a simple <em style="color:#d9534f">GitHub application</em>. Signin with your Github username and password.
				</br>
				This application uses the 	
				<%= link_to('Octokit client', 'https://github.com/octokit/octokit.rb/') %>
				to create access tokens to authenticate and make simple APIs requests on behalf of users. 
			</p>
			<p id="signin"><a class="btn btn-primary" role="button" href=<%= signin_path%>> Signin with Github</a></p>
			<p id="signin"><a class="btn btn-primary" role="button" href=<%= signin_path%>> Signin</a></p>
		</div>
	</div><!--end jumbotron-->

	
	<div class="row">
		<div class="col-md-6">
			<p>(0). Simple example usage.</p>
			<%= image_tag("front1.jpg", :alt => "Example usage screenshot", class: "img-responsive", class: "img-thumbnail") %> 
		</div>
		<div class="col-md-6">
			<p>(1).  Signin using your GitHub credentials.</p>
			<%= image_tag("login1.jpg", :alt => "Login with GitHub credentials screenshot", class: "img-responsive", class: "img-thumbnail") %> 
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<p>(2).  Display basic profile information.</p>
			<%= image_tag("profile1.jpg", :alt => "GitHub profile screenshot", class: "img-responsive", class: "img-thumbnail") %> 
		</div>
		<div class="col-md-6">
			<p>(3). Display public repositories.</p>
				<%= image_tag("repos1.jpg", :alt => "public repos screenshot", class: "img-responsive", class: "img-thumbnail") %> 
		</div>
	</div>
</div><!--close container-->
<% end %>